pipeline {
    agent any

    tools {
        // Optionnel si tu veux utiliser une installation Maven globale sur Jenkins
        // maven 'Maven3'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/mohamedgader/MadrassaCloud_BE.git'
            }
        }

        stage('Build') {
            steps {
                bat '.\\mvnw.cmd clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                bat '.\\mvnw.cmd test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Déploiement fictif ici (ex: copie du JAR, docker build, etc.)'
            }
        }
    }

    post {
        success {
            echo '✅ Build terminé avec succès'
        }
        failure {
            echo '❌ Build échoué'
        }
    }
}
