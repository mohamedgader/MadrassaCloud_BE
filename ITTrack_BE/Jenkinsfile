pipeline {
    agent any

    tools {
        jdk 'jdk-17'   // doit correspondre exactement au "Name" défini dans Jenkins
        maven 'Maven3' // si tu as configuré Maven dans Jenkins (sinon on utilisera mvnw)
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/mohamedgader/MadrassaCloud_BE.git'
            }
        }

        stage('Check Java') {
            steps {
                bat 'java -version'
            }
        }

        stage('Build') {
            steps {
                bat 'mvnw.cmd clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                bat 'mvnw.cmd test'
            }
        }
    }
}
